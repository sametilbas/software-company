
@{
    ViewBag.Title = "Başvurular";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: wheat
    }

    #panel555 {
        padding-left: 35%;
    }

    #panel666 {
        padding-left: 35%;
    }

    #panel777 {
        padding-left: 35%;
    }
</style>
@if (ViewBag.mesaj!=null)
{
    <script>alert("Mail başarılı şekilde gönderilmiştir.");</script>
}
<br /><br />
<!-- Nav tabs -->
<ul style="padding-left:50px;padding-right:50px;background-color:antiquewhite" class="nav nav-tabs md-tabs nav-justified primary-color" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#panel555" role="tab">
            <i class="fas fa-user pr-2"></i>İletişim/Çözüm Ortağı
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#panel666" role="tab">
            <i class="fas fa-heart pr-2"></i>Stajyer Başvuru
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#panel777" role="tab">
            <i class="fas fa-heart pr-2"></i>Çalışan Başvuru
        </a>
    </li>
</ul>
<!-- Nav tabs -->
<!-- Tab panels -->
<div style="padding-left:50px;padding-right:50px" class="tab-content">
    <!-- Panel 1 -->
    <div class="tab-pane fade in show active" id="panel555" role="tabpanel">
        <div style="padding-left:25px" class="row no-gutters block-9">
            <div class="col-md-6 order-md-last d-flex">
                @using (Html.BeginForm("contact", "Request", FormMethod.Get))
                {
                    <form class="bg-light p-5 contact-form">
                        <input type="hidden" name="type" value="İletişim"/>
                        <div class="form-group">
                            <input type="text" name="Name" class="form-control" placeholder="Adınız" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="Surname" class="form-control" placeholder="Soyadınız" required>
                        </div>
                        <div class="form-group">
                            <input type="number" name="Phone" class="form-control" placeholder="Telefon Numarınız" required>
                        </div>
                        <div class="form-group">
                            <input type="email" name="Email" class="form-control" placeholder="E-Mail Adresiniz" required>
                        </div>
                        <div class="form-group">
                            <textarea name="messages" cols="30" rows="7" class="form-control" placeholder="Konu" required></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Gönder" class="btn btn-primary py-3 px-5">
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
    <!-- Panel 1 -->
    <!-- Panel 2 -->
    <div class="tab-pane fade" id="panel666" role="tabpanel">
        <div class="row no-gutters block-9">
            @using (Html.BeginForm("contact", "Request", FormMethod.Get))
            {
            <form class="bg-light p-5 contact-form">
                <input type="hidden" name="type" value="Stajyer" />
                <select class="form-control" id="MovieType" name="typeIntern">
                    <option selected="selected" value="0">Stajyer-Üniversite</option>
                    <option value="1">Stajyer-Lise</option>
                </select>
                <br>
                <div class="form-group">
                    <input type="text" name="Name" class="form-control" placeholder="Adınız" required>
                </div>
                <div class="form-group">
                    <input type="text" name="Surname" class="form-control" placeholder="Soyadınız" required>
                </div>
                <div class="form-group">
                    <input type="number" name="Phone" class="form-control" placeholder="Telefon Numarınız" required>
                </div>
                <div class="form-group">
                    <input type="email" name="Email" class="form-control" placeholder="E-Mail Adresiniz" required>
                </div>
                <div class="form-group">
                    <textarea name="messages" cols="30" rows="7" class="form-control" placeholder="Konu" required></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gönder" class="btn btn-primary py-3 px-5">
                </div>
            </form>
            }
        </div>
        </div>
    <!-- Panel 2 -->
    <!-- Panel 3 -->
    <div class="tab-pane fade" id="panel777" role="tabpanel">
        <div style="padding-left:25px" class="row no-gutters block-9">
            <div class="col-md-6 order-md-last d-flex">
                @using (Html.BeginForm("contact", "Request", FormMethod.Get))
                {
                    <form class="bg-light p-5 contact-form">
                        <input type="hidden" name="type" value="Çalışan" />
                        <div class="form-group">
                            <input type="text" name="Name" class="form-control" placeholder="Adınız" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="Surname" class="form-control" placeholder="Soyadınız" required>
                        </div>
                        <div class="form-group">
                            <input type="number" name="Phone" class="form-control" placeholder="Telefon Numarınız" required>
                        </div>
                        <div class="form-group">
                            <input type="email" name="Email" class="form-control" placeholder="E-Mail Adresiniz" required>
                        </div>
                        <div class="form-group">
                            <textarea name="messages" cols="30" rows="7" class="form-control" placeholder="Konu" required></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Gönder" class="btn btn-primary py-3 px-5">
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
    <!-- Panel 3 -->
</div>

@section samet
    {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
