@model suffa.Models.homeındexview
@{
    ViewBag.Title = "Proje Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row">
            @foreach (var project in Model.project)
            {
                <div class="col-lg-8 ftco-animated">
                    <h1 style="font-size:50px">@project.projectName</h1> <a href="@Url.Action("bloglike","Home",new { id=project.projectId})"></a>
                    <img style="width:730px" src="@Url.Content(project.projectImagePath)" />
                    <br /><br />
                    <div class="jumbotron">@Html.Raw(project.projectDescrption)</div>

                    <div class="col-lg-8 ftco-animated">
                        <div style="width:700px;border-radius:40px" class="about-author d-flex p-4 bg-light">
                            <div class="bio mr-5">
                                <img src="/images/person_1.jpg" alt="Image placeholder" class="img-fluid mb-4">
                            </div>
                            <div class="desc">
                                <h3>SUFFATECH</h3>
                                @foreach (var about in Model.abouts)
                                {
                                    <p>@about.abouts</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!-- .col-md-8 -->
            }
            <div class="col-lg-4 sidebar ftco-animated">
                <div class="sidebar-box ftco-animated">
                    <h3 class="heading-sidebar">Diğer Projelerimiz</h3>
                    @foreach (var project in Model.pro)
                    {
                        <div class="block-21 mb-4 d-flex">
                            <a href="@Url.Action("singleproject","Home",new { id=project.projectId})" class="blog-img mr-4"><img style="height:80px;width:80px" src="@Url.Content(project.projectImagePath)" /></a>
                            <div class="text">
                                <h3 class="heading"><a href="@Url.Action("singleblog","Home",new { id=project.projectId})">@project.projectName</a></h3>
                                <div class="meta">
                                    <div><a href="@Url.Action("singleproject","Home",new { id=project.projectId})">SUFFATECH</a></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section> <!-- .section -->
