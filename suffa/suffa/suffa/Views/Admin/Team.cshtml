@model suffa.Models.empview
@{
    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


@if (ViewBag.hata != null)
{
    <script>alert("Yetkiniz Yok")</script>
}
<!-- ekleme Button trigger modal -->
<button type="button" class="btn btn-primary" onclick="ekle()">
    Ekle
</button>
<br />
<div id="div" style="display:none" >
    @using (Html.BeginForm("Teamadd", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <input type="text" name="userName" class="form-control" required placeholder="Adı" />
        <br />
        <input type="text" name="userSurname" class="form-control" required placeholder="Soyadı" />
        <br />
        <input type="number" name="userPhone" class="form-control" required placeholder="TelefonN Numarası" />
        <br />
        <input type="email" name="userEmail" class="form-control" required placeholder="E-Mail" />
        <br />
        <input type="text" name="employePassword" class="form-control" required placeholder="Şifre" />
        <br />
        <select class="form-control" id="MovieType" name="userRole">
            <option selected="selected" value="0">Çalışan</option>
            <option value="1">Stajyer-Lise</option>
            <option value="2">Stajyer-Üniversite</option>
        </select>
        <br /><br />
        <input type="file" name="foto" required value="Resim Seçiniz" />
        <br />
        <input style="margin-left:40px" type="submit" class="btn btn-success" value="Kaydet" />
        <br />
    }
</div>
<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyadı</th>
            <th>Şifre</th>
            <th>Resim</th>
            <th>Role</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model.epm)
        {
            foreach (var usr in Model.usr)
            {
                if (emp.userId == usr.userId)
                {
                    <tr>
                        <td>@emp.employeId</td>
                        <td>@usr.userName</td>
                        <td>@usr.userSurname</td>
                        <td>@emp.employePassword</td>
                        <td><img style="height:150px;width:150px" src="@Url.Content(emp.employeImage)" /></td>
                        <td>@usr.userRole</td>
                        <td>
                            <a href="@Url.Action("Teamdelete","Admin",new { id=emp.employeId})" onclick="return sor()">
                                Sil
                            </a>
                        </td>
                    </tr>
                    break;
                }
            }
        }
    </tbody>
</table>


<script>
    function sor() {

        if (confirm("Kayıt Siliniyor, Onaylıyormusunuz?")) { }
        else { return false; }

    }
    function ekle() {
        var div = document.getElementById("div");
        if (div.style.display == "none") {
            div.style.display = "inline";
        }
        else {
            div.style.display = "none";
        }
    }
</script>

@section samet
    {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}


